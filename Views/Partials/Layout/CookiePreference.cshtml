<div class="modal fade" id="cookieModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="cookieModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slideout" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cookieModal">Set cookie preference</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>*@
            </div>
            <div class="modal-body">
                <form class="cookieForm">
                    <label><input type="checkbox" id="googleAnalytics" class="cookieCheckbox">Google Analytics</label>
                </form>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                <button type="button" id="submitCookiePreference" class="btn btn-primary cookie-accept" @*onClick="cookiePolicyAgree();"*@ data-dismiss="modal">Save changes &amp; Accept</button>
            </div>
        </div>
    </div>
</div>